{
  "name": "smart-indent",
  "displayName": "Smart Indent",
  "description": "自动缩进避免触发AI代码补全，光标移动到空行时自动应用正确缩进",
  "version": "1.0.3",
  "publisher": "fmnisme",
  "repository": {
    "type": "git",
    "url": "https://github.com/fmnisme/smart-indent.git"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "AI",
    "Formatters",
    "Programming Languages"
  ],
  "keywords": [
    "indent",
    "auto indent",
    "smart indent",
    "AI",
    "code completion"
  ],
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#0E639C",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "smart-indent.enableAutoIndent",
        "title": "启用智能缩进"
      },
      {
        "command": "smart-indent.disableAutoIndent",
        "title": "禁用智能缩进"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^22.13.5",
    "@types/vscode": "^1.96.0",
    "typescript": "^5.7.3"
  }
}